<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@book.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @book do |f| %>
  Title: <%= f.text_field :title %> <br>
  Genre: <%= f.text_field :genre %> <br>
  Page Count: <%= f.text_field :page_count %> <br>
  by <%= f.collection_select :author_id, Author.order(:name),:id,:name, include_blank: true %> <br>
  <%= link_to "Create New Author", new_author_path %> <br>
    <%= f.fields_for :user_books do |ff| %>
      Finished reading?  <%= ff.check_box :finished %>
    <% end %>
  <%= f.submit "Submit" %>
<% end %>
